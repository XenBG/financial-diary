{
    "compilerOptions": {
        "checkJs": false,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "target": "esnext",
        "module": "esnext",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
        }
    },
    "include": ["src/**/*"],
    "exclude": ["dist", "node_modules", "build", ".vscode", ".nuxt", "coverage", ".npm", ".yarn"],
    "typeAcquisition": {
        "enable": true
    }
}
